# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/apothecary-shop

# JWT Authentication
JWT_SECRET=your-secret-key-here

# AI Services
AI_API_KEY=your-google-gemini-ai-api-key-here

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id-here

GOOGLE_CLIENT_SECRET=your-google-client-secret-here

GOOGLE_CALLBACK_URL=your-google-callback-url  # For example: http://localhost:5000/api/auth/google/callback here '/api/auth/google/callback' should be constant

GOOGLE_CALLBACK_FAIL_URL=your-google-callback-fail-url  # For example: Your frontend login page URL


#  FaceBook OAuth

FACEBOOK_APP_ID=your_actual_app_id_here

FACEBOOK_APP_SECRET=your_actual_app_secret_here

FACEBOOK_CALLBACK_URL=your-facebook-callback-url # For example: http://localhost:5000/api/auth/facebook/callback

FACEBOOK_CALLBACK_FAIL_URL=your-facebook-callback-fail-url  # For example: Your frontend login page URL

# Rate Limiting Configuration (optional - defaults shown below)
RATE_LIMIT_WINDOW_MS=900000          # 15 minutes in milliseconds
RATE_LIMIT_MAX=100                   # Max requests per window per IP
AUTH_RATE_LIMIT_WINDOW_MS=60000      # 1 minute for auth endpoints
AUTH_RATE_LIMIT_MAX=5                # Max auth requests per window per IP

# Trust Proxy (set to 1 if behind reverse proxy/load balancer)
TRUST_PROXY=0